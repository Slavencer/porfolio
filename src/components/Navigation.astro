---
const currentPath = Astro.url.pathname;
---
<nav>
  <style>
    a.button {
      color: white;
      background: linear-gradient(83.21deg, #0093b0 10%, #8400ff 90%);
      box-shadow:
        inset 0 0 0 1px rgba(255, 255, 255, 0.12),
        inset 0 -2px 0 rgba(0, 0, 0, 0.24);
      border-radius: 10px;
    }
    a.button.active {
      background: linear-gradient(83.21deg, #006276 0%, #5400a2 100%);
      box-shadow:
        inset 0 2px 4px rgba(0, 0, 0, 0.4),
        inset 0 0 0 1px rgba(255, 255, 255, 0.1);
      transform: translateY(1px);
    }

    a.button:hover {
      color: rgb(230, 230, 230);
      box-shadow: none;
    }
  </style>
  <a class={`nav-link ${currentPath === '/projects' ? 'active button' : 'button'}`} href="projects">Projects</a>
  <a class={`nav-link ${currentPath === '/about' ? 'active button' : 'button'}`} href="about">About Me</a>
  <a class={`nav-link ${currentPath === '/socials' ? 'active button' : 'button'}`} href="socials">Socials</a>
</nav>